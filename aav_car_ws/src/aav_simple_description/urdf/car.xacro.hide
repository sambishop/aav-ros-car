<?xml version="1.0"?>
<robot name="car" xmlns:xacro="http://ros.org/wiki/xacro">
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.3" rpy="0 0 0"/>
            <geometry>
                <box size="2.0 1.0 0.2"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
    </link>

    <link name="front_left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <material name="black">
                <color rbga="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <link name="front_left_link"/>

    <link name="front_right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="front_right_link"/>

    <link name="back_left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="back_right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.3" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="front_left_turn_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_left_link"/>
        <origin xyz=".8 .6 .3"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000" lower="-.548" upper=".548" velocity=".5"/>
    </joint>

    <joint name="front_left_joint" type="continuous">
        <parent link="front_left_link"/>
        <child link="front_left_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="front_right_turn_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_right_link"/>
        <origin xyz=".8 -.6 .3"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000" lower="-.548" upper=".548" velocity=".5"/>
        <mimic joint="front_left_turn_joint"/>
    </joint>

    <joint name="front_right_joint" type="continuous">
        <parent link="front_right_link"/>
        <child link="front_right_wheel"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="back_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <axis xyz="0 1 0"/>
        <origin xyz="-.8 .6 .3"/>
    </joint>

    <joint name="back_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <axis xyz="0 1 0"/>
        <origin xyz="-.8 -.6 .3"/>
        <mimic joint="back_left_joint"/>
    </joint>
</robot>

